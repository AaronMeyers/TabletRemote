<script src="javascripts/utils.js"></script>
<script src="javascripts/countdown.js"></script>
<script src="javascripts/remote.js"></script>
<script src="javascripts/particles.js"></script>

<div id="cave">
  <img src="/images/wirecave.png">
</div>

<div id="test">

</div>

<div id="countdown">
  TAKE CONTROL IN
  <div class="countdownTimer">
    <span class="countdownColon">:</span><span class="countdownSeconds">60</span>
  </div>
</div>

<div class="iphone">

  <div id="clonablefinger" class="finger">
    <img src="/images/finger.png" style="max-width:100%; max-height:100%;">
  </div>

  <canvas id="canvas"></canvas>
  <canvas id="fingercanvas"></canvas>
  
</div>


<div id="settingsPanel" class="panel panel-default" style="display:none;">
  <div class="panel-heading">
    <div class="panel-title">REMOTE SETTINGS</div>
  </div>
  <div class="panel-body">
    <div class="btn-group btn-group-lg">
      <button type="button" class="btn btn-default remoteNumButton">1</button>
      <button type="button" class="btn btn-default remoteNumButton">2</button>
      <button type="button" class="btn btn-default remoteNumButton">3</button>
      <button type="button" class="btn btn-default remoteNumButton">4</button>
    </div>

    <div class="btn-group btn-group-lg">
      <button id="activityStatus" type="button" class="btn btn-danger" disabled>INACTIVE/0</button>
    </div>

    <div class="btn-group btn-group-lg">
      <button id="hideSettingsButton" type="button" class="btn btn-default">DONE</button>
    </div>

  </div>
</div>